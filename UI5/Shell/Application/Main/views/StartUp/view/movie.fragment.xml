<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog id="Dialog_Id" title="{/dialogview/title}" class="movieDialog-style">

        <VBox class="posterstyle">
            <HBox>
                <Image src="{/dialogview/posterurl}" class="posterfragment-size" press="NewDialogPress"></Image>
                <VBox class="fragment-title-text-style">
                    <Text text="{/dialogview/storyline}" class="postertextFragment-style"/>
                </VBox>
            </HBox>
            <HBox>
                <core:Icon src="sap-icon://favorite" class="ratingiconfragment-style"></core:Icon>
                <core:Icon src="sap-icon://decline" press="onClose" class="add-style"></core:Icon>
                <core:Icon src="sap-icon://thumb-up" class="thumbup-style"></core:Icon>            
                <Text text="{/dialogview/imdbRating}" class="posterfragment-rating-style"/>
                <core:Icon src="sap-icon://media-play" class="play-style"></core:Icon>
                <Link text="Watch"  class="watchIcontext-style"/>
            
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>